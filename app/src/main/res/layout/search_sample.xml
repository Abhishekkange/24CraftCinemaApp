<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/black_border"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/change_profile_image"
                android:layout_width="82dp"
                android:layout_height="70dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/placeholder"
                app:civ_border_color="#AAAAAA"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/followName"
                android:layout_width="133dp"
                android:layout_height="40dp"
                android:fontFamily="@font/lemon"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/change_profile_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.055"
                app:layout_constraintStart_toEndOf="@+id/change_profile_image"
                app:layout_constraintTop_toTopOf="@+id/change_profile_image"
                app:layout_constraintVertical_bias="0.366" />

            <Button
                android:id="@+id/followBtn"
                android:layout_width="84dp"
                android:layout_height="38dp"
                android:text="follow"
                android:textSize="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/followName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/followName"
                app:layout_constraintTop_toTopOf="@+id/followName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>